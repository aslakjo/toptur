<head>

  <%= GMap.header %>
  <%= javascript_include_tag 'util.js'  %>
  <%= @map.to_html %>

</head>


<div id="map">
  <%= @map.div(:width => 900, :height => 500) %>
</div>



<div class="main_content">
  
  <% form_for(@tour) do |f| %>
    <%= f.error_messages %>

    <%=  render :partial => 'map', :locals => {:f => f} %>
    <h1><%= @tour.title %></h1>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>



    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>

  <%= link_to 'Show', @tour %> |
  <%= link_to 'Back', tours_path %>
</div>