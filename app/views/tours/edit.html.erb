<head>

  <%= GMap.header %>
  <script src="/util.js" type="text/javascript" > </script>
  <%= @map.to_html %>

</head>

<h1>Editing tour</h1>

<%= @map.div(:width => 900, :height => 500) %>



<div id="climbButton" onclick="setMode(EditMode.climb)">
  Climb
</div>
<div id="downButton" onclick="setMode(EditMode.down)">
  Skiing down
</div>
<div id="saveButton" onclick="saveCurrentRoute(currentMode)">
  Save
</div>



<% form_for(@tour) do |f| %>
  <%= f.error_messages %>

  <%= f.text_field :pointsGoingUp %>
  <%= f.text_field :pointsGoingDown %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  


  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @tour %> |
<%= link_to 'Back', tours_path %>
